<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_view_film_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/fragment_view_film_image_view_poster"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_no_image"
            android:src="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/fragment_view_film_text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:text="@string/header_title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/fragment_view_film_text_view_year_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_view_film_text_view_title"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:text="@string/header_release_year"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:id="@+id/fragment_view_film_text_view_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fragment_view_film_text_view_year_header"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/fragment_view_film_text_view_year_header"
            android:layout_toRightOf="@+id/fragment_view_film_text_view_year_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/fragment_view_film_text_view_director_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fragment_view_film_text_view_year"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:text="@string/header_director"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:id="@+id/fragment_view_film_text_view_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fragment_view_film_text_view_director_header"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/fragment_view_film_text_view_plot_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_view_film_text_view_director"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:text="@string/header_plot"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:id="@+id/fragment_view_film_text_view_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_view_film_text_view_plot_header"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/fragment_view_film_layout_user_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_view_film_text_view_plot"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_view_film_text_view_user_rating_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="@string/header_rate_this_film"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorTextBlack" />

            <RatingBar
                android:id="@+id/fragment_view_film_rating_bar_user_rating"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:numStars="5"
                android:theme="@style/RatingBar" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_view_film_layout_imdb_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_view_film_layout_user_rating"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/fragment_view_film_image_view_poster"
            android:layout_toRightOf="@+id/fragment_view_film_image_view_poster"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_view_film_text_view_imdb_rating_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_imdb_rating"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorTextBlack" />

            <TextView
                android:id="@+id/fragment_view_film_text_view_imdb_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/fragment_view_film_check_box_seen_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:checked="false"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:text="@string/checkbox_seen_film"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>